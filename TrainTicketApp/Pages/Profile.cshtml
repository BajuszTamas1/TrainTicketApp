@page
@model TrainTicketApp.Pages.ProfileModel
@{
    ViewData["Title"] = "Profil";
}

<h1>@Model.User.Username felhasználó adatai</h1>

@if (Model.User != null)
{
    <form method="post">
        <div class="form-group">
            <label asp-for="User.Username">Felhasználónév</label>
            <input asp-for="User.Username" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="User.Email">Email</label>
            <input asp-for="User.Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="User.PhoneNumber">Telefonszám</label>
            <input asp-for="User.PhoneNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="User.Address">Cím</label>
            <input asp-for="User.Address" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="User.Password">Jelszó</label>
            <input asp-for="User.Password" type="password" class="form-control" />
        </div>
        <button style="float:left; margin-right: 10px;" type="submit" class="btn btn-primary">Mentés</button>
    </form>

    <form method="post" asp-page-handler="Delete">
        <button style="float: left;" type="submit" class="btn btn-danger">Profil törlése</button>
    </form>
}
else
{
    <div class="alert alert-danger">Nincs bejelentkezett felhasználó.</div>
}